<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   	<com.tims.util.TitleLayout
   	    android:id="@+id/titlelayout_hdsq"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	</com.tims.util.TitleLayout>
	
   	<TextView 
	    android:id="@+id/tv_nullsubject"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:text="@string/null_subject"/>
    
    <ListView 
    	    android:id="@+id/list_subject"
    	    android:layout_width="match_parent"
    	    android:layout_height="0dp"
    	    android:layout_weight="1">
    </ListView>
    
    <LinearLayout 
        android:id="@+id/ll_addsub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <EditText 
        	android:id="@+id/et_addsub"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:maxLines="5"
        	android:background="@drawable/selector_edittext"
        	android:layout_gravity="bottom"/>
        <Button 
            android:id="@+id/btn_addsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    
</LinearLayout>
