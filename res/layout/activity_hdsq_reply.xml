<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.tims.util.TitleLayout
   	    android:id="@+id/titlelayout_hdsq_reply"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	</com.tims.util.TitleLayout>
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/tv_stuid_sub_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/tv_stuname_sub_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/tv_sub_content_rep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#000b15"
            android:textSize="18sp" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/tv_sub_date_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:textSize="15sp"/>
        <TextView 
            android:id="@+id/tv_sub_reply_rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_sub_date_rep"
                android:layout_marginTop="6dp"
        android:textSize="15sp"/>
    </RelativeLayout>
    
    <ListView 
    	    android:id="@+id/list_reply"
    	    android:layout_width="match_parent"
    	    android:layout_height="0dp"
    	    android:layout_weight="1"
    	    android:layout_marginTop="5dp">
    </ListView>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <EditText 
        	android:id="@+id/et_addrep"
        	android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:maxLines="5"
        	android:layout_gravity="bottom"
        	android:background="@drawable/selector_edittext"/>
        <Button 
            android:id="@+id/btn_addrep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    

</LinearLayout>
