<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#90d7ec" >

        <ImageView
            android:id="@+id/btn_titleback_attdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:padding="14dp"
            android:src="@drawable/arrow_left" />
        
		<TextView
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_centerInParent="true"
	    	android:text="考勤详情"
			android:textSize="20sp"
	    	android:textColor="#ffffff"/>
		
		<Spinner 
	   		android:id="@+id/spinner_attdetail"
	    	android:layout_width="70dp"
	    	android:layout_height="wrap_content"
	    	android:entries="@array/status"
	    	android:layout_alignParentRight="true"
	    	android:layout_marginTop="10dp"/>
</RelativeLayout>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="40dp">
    
    <TextView 
        android:id="@+id/tv_attdetail_total"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:gravity="center"
        android:textSize="18sp"
    	
    />
    <TextView 
        android:id="@+id/tv_attdetail_on"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:gravity="center"
        android:textSize="18sp"
    />
    <TextView 
        android:id="@+id/tv_attdetail_delay"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:gravity="center"
        android:textSize="18sp"
    	
    />
     <TextView 
        android:id="@+id/tv_attdetail_off"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:gravity="center"
        android:textSize="18sp"
    />
</LinearLayout>
	<ListView 
    	    android:id="@+id/list_attenddetail"
    	    android:layout_width="match_parent"
    	    android:layout_height="0dp"
    	    android:layout_weight="1">
    </ListView>

</LinearLayout>
